	"item": [
		{
			"name": "Login jtech",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"var jsd = JSON.parse(responseBody);",
							"tests[\"login success\"]=jsd.d.Password===\"\" && jsd.d.UserName===\"jtech\";",
							"postman.setEnvironmentVariable(\"token\",postman.getResponseHeader('TokenKey'));"
						]
					}
				}
			],
			"request": {
				"url": "{{envKey}}/cb/odata/ns/authenticationservice/SecureUsers?action=init",
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"description": ""
					},
					{
						"key": "Accept",
						"value": "application/json",
						"description": ""
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n\"UserName\": \"jtech\",\r\n\r\n               \"AppType\": \"Business\",\r\n\r\n               \"Password\": \"Pass1234\",\r\n\r\n               \"ChannelType\": \"Web\"\r\n\r\n}"
				},
				"description": ""
			},
			"response": []
		},
		{
			"name": "add transfer",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"var jsd = JSON.parse(responseBody);",
							"postman.setEnvironmentVariable(\"trId\",jsd.d.Id);",
							"tests[\"transfer added\"]=jsd.d.Id!==\"\";"
						]
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"type": "text/javascript",
						"exec": [
							"var newDate = new Date();\r",
							"var dateStr = \"\";\r",
							"//dateStr = \"\"+newDate.getFullYear()+\"-\"+newDate.getMonth()+\"-\"+newDate.getDate()+\"T\"+newDate.getHours()+\":\"+newDate.getMinutes()+\":\"+newDate.getSeconds();\r",
							"dateStr = newDate.toISOString().slice(0,-5);\r",
							"postman.setEnvironmentVariable(\"curDate\",dateStr);"
						]
					}
				}
			],
			"request": {
				"url": "{{envKey}}/cb/odata/services/transferservice/Transfers",
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"description": ""
					},
					{
						"key": "Accept",
						"value": "application/json",
						"description": ""
