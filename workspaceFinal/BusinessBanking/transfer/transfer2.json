				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n\r\n    \"FromAccountID\": \"50000-1\",\r\n\r\n    \"ToAccountID\": \"50001-2\",\r\n\r\n    \"UserAssignedAmount\": \"single\",\r\n\r\n    \"Amount\": \"51\",\r\n\r\n    \"AmountCurrency\": \"USD\",\r\n\r\n    \"Date\": \"{{curDate}}\"\r\n\r\n} "
				},
				"description": ""
			},
			"response": []
		},
		{
			"name": "get transfer",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"var jsd = JSON.parse(responseBody);",
							"tests[\"get transfer with \"+environment['trId']]=jsd.d.Id===environment['trId'];"
						]
					}
				}
			],
			"request": {
				"url": "{{envKey}}/cb/odata/services/transferservice/Transfers('{{trId}}')?$expand=FromAccount,ToAccount",
